<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="descriptionImage"
            type="com.example.shoppi_clone.model.DescriptionImage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/iv_product_detail_image"
            imageUrl="@{descriptionImage.imageUrl}"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:contentDescription="@string/description_product_detail_image"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_pdp_top_01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>